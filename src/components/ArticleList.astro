---
const { articles, currentURLPath } = Astro.props;
---

<h3>In this guide</h3>
<ul>
  {
    articles.map(({ url: articleURLPath, frontmatter: { title } }) => (
      <li>
        {articleURLPath === currentURLPath && (
          <span class="current-article-icon">&#9992;</span>
        )}
        <a href={articleURLPath}>{title}</a>
      </li>
    ))
  }
</ul>
