---
import { Image } from "astro:assets";

const { comingSoon, height, hideTitle = false, image : { alt, src}, title, transitionName } = Astro.props;

---

<div class:list={[{ 'coming-soon': comingSoon } ]} >
    <Image src={src} height={height} alt={alt} transition:name=`${transitionName}-image` />
    <h3 class:list={['card-title', { hide: hideTitle, comingSoon: comingSoon } ]} transition:name=`${transitionName}-title`>{title}</h3>
</div>

<style>
    .coming-soon {
        opacity: 0.5;
    }
	.card-title {
		font-size: 3rem;
        font-weight: 200;
		line-height: 1;
        margin-left: -5px;
		display: inline-block;
	}
    .card-title.hide {
        display: none;
    }
    img {
        height: auto;
        width: 100%;
        display: block;
        margin-bottom: 0;
        box-shadow: 1.5rem 1rem 2rem rgba(0, 0, 0, 0.25);
        transition: transform 0.5s;
    }
    @media screen and (min-width: 768px) {
        img {
            min-width: 100%;
        }
    }
</style>
