---
import { Image } from "astro:assets";

import { LocationMenuImages } from "../data/MenuImages";

const {
  frontmatter: { title, guide, description },
} = Astro.props;

const locationImage = LocationMenuImages[guide];
---

<h2>Next Up</h2>
<a class="link" href="#">
  <Image class="image" {...locationImage} />
  <div class="content">
    <h3 class="title">{title}</h3>
    <p class="description">{description}</p>
  </div>
</a>
<style>
  .link {
    display: flex;
    gap: var(--space-m);
    text-decoration: none;
    justify-content: center;
  }
  .content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    justify-content: center;
  }
  .image {
    height: 100px;
    width: auto;
    margin-bottom: 0;
  }
  .title {
    margin: 0;
    text-decoration: underline;
  }
  .description {
    margin: 0;
  }
</style>
