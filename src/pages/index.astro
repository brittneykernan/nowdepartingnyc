---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { LocationMenuItems } from "../data/MenuItems.mjs";
import Footer from "../components/Footer.astro";
import { AppConfig } from "../utils/AppConfig.mjs";

const { title: siteTitle, description, ogImage } = AppConfig;
const title = `Home | ${siteTitle}`;
---

<Layout title={title} description={description} ogImage={ogImage}>
  <p>Travel with us, semi-bougie millenial Brooklynites, to...</p>
  <section class="full-width-scrollable">
    <ul>
      {
        LocationMenuItems.map(
          ({ image, slug, title, subtitle, comingSoon }, index) => (
            <li>
              <Card
                image={image}
                height={900}
                href={`/${slug}/`}
                loading={index > 0 ? "lazy" : "eager"}
                title={title}
                subtitle={subtitle}
                transitionName={slug}
                comingSoon={comingSoon}
              />
            </li>
          )
        )
      }
    </ul>
  </section>
</Layout>
<Footer />

<style>
  .full-width-scrollable {
    width: 100%;
    overflow: scroll;
  }
  p {
    padding-left: var(--space-l);
    margin: var(--space-m) 0;
  }
  @media screen and (min-width: 768px) {
    p {
      padding-left: var(--space-xl);
    }
  }
  ul {
    display: flex;
    margin: 0;
    padding-left: var(--space-l);
  }
  @media screen and (min-width: 768px) {
    ul {
      padding-left: var(--space-xl);
    }
  }
  li {
    padding-right: var(--space-l);
  }
  @media screen and (min-width: 768px) {
    li {
      padding-right: var(--space-xl);
    }
  }
  li a {
    text-decoration: none;
  }
  li img {
    height: 450px;
    width: auto;
    display: block;
    box-shadow: 1.5rem 1rem 2rem rgba(0, 0, 0, 0.25);
  }
</style>
